<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="#00000000"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <FrameLayout
      android:background="#00000000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true" >
    <LinearLayout
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardCornerRadius="2dp"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:background="#ffffff"
          android:layout_gravity="center_vertical"
          android:elevation="2dp">
        <LinearLayout
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <TextView
              android:textColor="@color/colorPrimary"
              android:layout_width="wrap_content"
              android:id="@+id/title"
              android:padding="5dp"
              android:textStyle="bold"
              android:textSize="16sp"
              android:layout_gravity="center"
              android:layout_height="wrap_content"
              android:text="Warning"/>

          <RelativeLayout
              android:background="#67eae7e7"
              android:padding="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

            <TextView
                android:text="              "
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/txt_serverresponse1"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_below="@+id/txt_serverresponse1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/txt_message"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="   Do you really want to quit?   "/>

            <TextView
                android:layout_below="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/txt_serverresponse"
                android:textColor="@color/colorPrimaryDark"/>
          </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yesButton"
            app:cardCornerRadius="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp">

          <RelativeLayout
              android:layout_width="wrap_content"
              android:padding="5dp"
              android:layout_height="wrap_content">
            <TextView
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:gravity="center_horizontal"
                android:textAlignment="gravity"
                android:layout_height="wrap_content"
                android:text="EXIT"/>
          </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_toRightOf="@+id/centerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noButton"
            app:cardCornerRadius="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp">

          <RelativeLayout
              android:layout_width="wrap_content"
              android:padding="5dp"
              android:layout_height="wrap_content">


            <TextView
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:gravity="center_horizontal"
                android:textAlignment="gravity"
                android:layout_height="wrap_content"
                android:text="  No  "/>
          </RelativeLayout>
        </androidx.cardview.widget.CardView>
      </RelativeLayout>


        </LinearLayout>
      </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--<ImageView-->
        <!--android:id="@+id/imageView_close"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="top|right"-->
        <!--android:clickable="true"-->
        <!--android:src="@drawable/cancel_icon" />-->
  </FrameLayout>
</LinearLayout>